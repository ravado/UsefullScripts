# Proxmox Configuration - Combined Settings
# Copy to .env: cp .env.example .env && nano .env

################################################################################
# Storage - ISO over NFS
################################################################################
ISO_ID="toolkit-nasik"
ISO_SERVER="192.168.91.198"
ISO_EXPORT="/volume1/Proxmox-Tools"
ISO_CONTENT="iso"
ISO_NFS_VERSION=""                 # "4" or empty for default
ISO_NODES=""                       # "pve1,pve2" or empty for all

################################################################################
# Storage - Proxmox Backup Server (Shared Settings)
################################################################################
PBS_SERVER="192.168.91.202"        # host or host:port
PBS_USERNAME="root@pam"            # or user@pam!tokenid
PASSWORD_OR_TOKEN=""
PBS_FINGERPRINT=""                 # from PBS UI: AA:BB:...:ZZ
PBS_CONTENT="backup"
PBS_NODES=""

################################################################################
# PBS Storage Locations (Namespace-based)
################################################################################

# Current Proxmox Host (root or proxic namespace)
PBS_PROXIC_ID="pbs-proxic"
PBS_PROXIC_DATASTORE="backups"
PBS_PROXIC_NAMESPACE=""            # empty for root, or "proxic"

# NucBox backups
PBS_NUCBOX_ID="pbs-nucbox"
PBS_NUCBOX_DATASTORE="backups"
PBS_NUCBOX_NAMESPACE="NucBoxG3"

# Add more as needed:
# PBS_HOMELAB_ID="pbs-homelab"
# PBS_HOMELAB_DATASTORE="backups"
# PBS_HOMELAB_NAMESPACE="homelab"

################################################################################
# GPU Passthrough - Hardware
################################################################################
# Find with: lspci -nn | grep -i nvidia
GPU_VGA_PCI_ID="0000:01:00.0"
GPU_AUDIO_PCI_ID="0000:01:00.1"
GPU_VGA_DEVICE_ID="10de:2d04"      # RTX 5060 Ti
GPU_AUDIO_DEVICE_ID="10de:22eb"

################################################################################
# GPU Passthrough - VM and Driver
################################################################################
VM_ID="200"
NVIDIA_DRIVER_VERSION="580.119.02" # RTX 50: 580.x+, RTX 30/40: 550.x+
NVIDIA_DRIVER_URL="https://us.download.nvidia.com/XFree86/Linux-x86_64/580.119.02/NVIDIA-Linux-x86_64-580.119.02.run"
NVIDIA_MODULE_TYPE="MIT"           # "MIT" or "Proprietary"

################################################################################
# System
################################################################################
CPU_VENDOR="intel"                 # "intel" or "amd"
AUTO_REBOOT="false"                # "true" for automatic reboots
DRY_RUN="false"                    # "true" to preview commands only

################################################################################
# Storage - Additional Drives (Optional)
################################################################################
STORAGE_DRIVE_1=""
STORAGE_DRIVE_2=""
# Example: 
# STORAGE_DRIVE_1="/dev/disk/by-id/ata-Samsung_SSD_860_EVO_1TB_S5B3NY0M902681A"
# STORAGE_DRIVE_2="/dev/disk/by-id/ata-WDC_WD20EFRX-68EUZN0_WD-WMC4M1501124"